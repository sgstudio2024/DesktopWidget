<Window x:Class="DesktopWidget.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置"
        Width="500" Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#AA000000"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Grid>
        <!-- 右上角关闭按钮 -->
        <Button x:Name="CloseButton"
                Width="30" Height="30"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,10,10,0"
                Background="Transparent"
                BorderThickness="0"
                Foreground="White"
                FontSize="16"
                Content="×"
                Click="CloseButton_Click"
                Cursor="Hand"/>
        
        <!-- 滚动视图容器 -->
        <ScrollViewer Margin="20,50,20,60" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Background="Transparent">
            <StackPanel>
            <TextBlock Text="设置"
                       FontSize="18"
                       Foreground="White"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>
                       
            <!-- 窗口外观设置组 -->
            <GroupBox Header="窗口外观" Margin="0,0,0,15" Background="#222222" BorderBrush="White" BorderThickness="1" Foreground="White">
                <StackPanel Margin="10">
                    <!-- 主题颜色设置 -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="主题颜色 (16进制)"
                                   FontSize="14"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="ThemeColorTextBox"
                                     Width="120"
                                     Background="#333333"
                                     Foreground="White"
                                     BorderThickness="1"
                                     BorderBrush="White"
                                     Text="#AA222222"/>
                            <TextBlock Text=" 例如: #AA222222"
                                       FontSize="12"
                                       Foreground="Gray"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- 透明度设置 -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="透明度设置"
                                   FontSize="14"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>
                        
                        <!-- 背景透明度 -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="背景透明度"
                                       FontSize="12"
                                       Foreground="White"
                                       Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider x:Name="BackgroundOpacitySlider"
                                        Width="200"
                                        Minimum="0.1"
                                        Maximum="1.0"
                                        Value="0.7"
                                        TickFrequency="0.1"
                                        IsSnapToTickEnabled="True"/>
                                <TextBlock x:Name="BackgroundOpacityText"
                                           Text="70%"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 文字透明度 -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="文字透明度"
                                       FontSize="12"
                                       Foreground="White"
                                       Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider x:Name="TextOpacitySlider"
                                        Width="200"
                                        Minimum="0.1"
                                        Maximum="1.0"
                                        Value="1.0"
                                        TickFrequency="0.1"
                                        IsSnapToTickEnabled="True"/>
                                <TextBlock x:Name="TextOpacityText"
                                           Text="100%"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 中间爱心透明度 -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="中间爱心透明度"
                                       FontSize="12"
                                       Foreground="White"
                                       Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider x:Name="CenterHeartOpacitySlider"
                                        Width="200"
                                        Minimum="0.1"
                                        Maximum="1.0"
                                        Value="1.0"
                                        TickFrequency="0.1"
                                        IsSnapToTickEnabled="True"/>
                                <TextBlock x:Name="CenterHeartOpacityText"
                                           Text="100%"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                        
                        <!-- 圆角设置 -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="圆角角度"
                                       FontSize="12"
                                       Foreground="White"
                                       Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider x:Name="CornerRadiusSlider"
                                        Width="200"
                                        Minimum="0"
                                        Maximum="50"
                                        Value="16"
                                        TickFrequency="1"
                                        IsSnapToTickEnabled="True"/>
                                <TextBlock x:Name="CornerRadiusText"
                                           Text="16"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="（设置为0时为直角）"
                                       FontSize="10"
                                       Foreground="Gray"
                                       Margin="0,5,0,0"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- 字体和显示设置 -->
                    <StackPanel Margin="0,0,0,15">
                        <!-- 字体大小设置 -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="字体大小"
                                       FontSize="14"
                                       Foreground="White"
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="FontSizeComboBox"
                                      Width="200" 
                                      HorizontalAlignment="Left"
                                      Background="#333333"
                                      Foreground="White">
                                <ComboBoxItem Content="小"/>
                                <ComboBoxItem Content="中" IsSelected="True"/>
                                <ComboBoxItem Content="大"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- 位置设置 -->
                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="位置"
                                       FontSize="14"
                                       Foreground="White"
                                       Margin="0,0,0,5"/>
                            <ComboBox x:Name="PositionComboBox"
                                      Width="200" 
                                      HorizontalAlignment="Left"
                                      Background="#333333"
                                      Foreground="White">
                                <ComboBoxItem Content="右上角" IsSelected="True"/>
                                <ComboBoxItem Content="左上角"/>
                                <ComboBoxItem Content="右下角"/>
                                <ComboBoxItem Content="左下角"/>
                                <ComboBoxItem Content="中央"/>
                            </ComboBox>
                        </StackPanel>
                        
                        <!-- 显示秒数设置 -->
                        <StackPanel Margin="0,0,0,10">
                            <CheckBox x:Name="ShowSecondsCheckBox"
                                      Content="显示秒数"
                                      Foreground="White"
                                      IsChecked="True"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            
            <!-- 窗口行为设置组 -->
            <GroupBox Header="窗口行为" Margin="0,0,0,15" Background="#222222" BorderBrush="White" BorderThickness="1" Foreground="White">
                <StackPanel Margin="10">
                    <StackPanel Margin="0,0,0,10">
                        <CheckBox x:Name="ShowInTaskbarCheckBox"
                                  Content="显示在任务栏"
                                  Foreground="White"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,10">
                        <CheckBox x:Name="StartWithWindowsCheckBox"
                                  Content="开机自启动"
                                  Foreground="White"/>
                    </StackPanel>
                    
                    <StackPanel Margin="0,0,0,10">
                        <CheckBox x:Name="IsTopmostCheckBox"
                                  Content="窗口置顶"
                                  Foreground="White"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            
            <!-- 内容设置组 -->
            <GroupBox Header="内容设置" Margin="0,0,0,15" Background="#222222" BorderBrush="White" BorderThickness="1" Foreground="White">
                <StackPanel Margin="10">
                    <!-- 自定义文本设置 -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="自定义文本"
                                   FontSize="14"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <TextBox x:Name="CustomTextTextBox"
                                 Width="200"
                                 Background="#333333"
                                 Foreground="White"
                                 BorderThickness="1"
                                 BorderBrush="White"
                                 Text="我们一起"/>
                    </StackPanel>
                    
                    <!-- 起始时间设置 -->
                    <StackPanel Margin="0,0,0,15">
                        <TextBlock Text="起始时间"
                                   FontSize="14"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <DatePicker x:Name="StartDatePicker"
                                        Width="120"
                                        Background="#333333"
                                        Foreground="White"
                                        BorderThickness="1"
                                        BorderBrush="White"
                                        SelectedDateFormat="Short"/>
                            <TextBlock Text=" "
                                       Width="10"/>
                            <TextBox x:Name="StartTimeTextBox"
                                     Width="80"
                                     Background="#333333"
                                     Foreground="White"
                                     BorderThickness="1"
                                     BorderBrush="White"
                                     Text="00:27:00"/>
                            <TextBlock Text=" (格式: HH:mm:ss)"
                                       FontSize="12"
                                       Foreground="Gray"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            
            <!-- 头像设置组 -->
            <GroupBox Header="头像设置" Margin="0,0,0,15" Background="#222222" BorderBrush="White" BorderThickness="1" Foreground="White">
                <StackPanel Margin="10">
                    <!-- 左下角头像 -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="左下角头像"
                                   FontSize="12"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <!-- 左下角头像模式选择 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <RadioButton x:Name="LeftAvatarLocalModeRadioButton" Content="本地模式" GroupName="LeftAvatarMode" Margin="0,0,10,0" Foreground="White" IsChecked="True"/>
                            <RadioButton x:Name="LeftAvatarOnlineModeRadioButton" Content="在线模式" GroupName="LeftAvatarMode" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="LeftAvatarPathTextBox"
                                     Width="250"
                                     Background="#333333"
                                     Foreground="White"
                                     BorderThickness="1"
                                     BorderBrush="White"
                                     Text="https://lxstu.sgstudio2025.xyz/1.png"/>
                            <Button x:Name="BrowseLeftAvatarButton"
                                    Content="浏览"
                                    Width="60"
                                    Height="25"
                                    Background="#666666"
                                    Foreground="White"
                                    BorderThickness="1"
                                    BorderBrush="White"
                                    Margin="10,0,0,0"
                                    Click="BrowseLeftAvatarButton_Click"
                                    Cursor="Hand"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="名称:"
                                       FontSize="12"
                                       Foreground="White"
                                       Width="40"
                                       VerticalAlignment="Center"/>
                            <TextBox x:Name="LeftAvatarNameTextBox"
                                     Width="150"
                                     Background="#333333"
                                     Foreground="White"
                                     BorderThickness="1"
                                     BorderBrush="White"
                                     Text="text"/>
                        </StackPanel>
                        
                        <!-- 左下角头像透明度 -->
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="头像透明度"
                                       FontSize="12"
                                       Foreground="White"
                                       Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider x:Name="LeftAvatarOpacitySlider"
                                        Width="200"
                                        Minimum="0.1"
                                        Maximum="1.0"
                                        Value="1.0"
                                        TickFrequency="0.1"
                                        IsSnapToTickEnabled="True"/>
                                <TextBlock x:Name="LeftAvatarOpacityText"
                                           Text="100%"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- 右下角头像 -->
                    <StackPanel Margin="0,0,0,10">
                        <TextBlock Text="右下角头像"
                                   FontSize="12"
                                   Foreground="White"
                                   Margin="0,0,0,5"/>
                        <!-- 右下角头像模式选择 -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <RadioButton x:Name="RightAvatarLocalModeRadioButton" Content="本地模式" GroupName="RightAvatarMode" Margin="0,0,10,0" Foreground="White" IsChecked="True"/>
                            <RadioButton x:Name="RightAvatarOnlineModeRadioButton" Content="在线模式" GroupName="RightAvatarMode" Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBox x:Name="RightAvatarPathTextBox"
                                     Width="250"
                                     Background="#333333"
                                     Foreground="White"
                                     BorderThickness="1"
                                     BorderBrush="White"
                                     Text="https://lxstu.sgstudio2025.xyz/2.png"/>
                            <Button x:Name="BrowseRightAvatarButton"
                                    Content="浏览"
                                    Width="60"
                                    Height="25"
                                    Background="#666666"
                                    Foreground="White"
                                    BorderThickness="1"
                                    BorderBrush="White"
                                    Margin="10,0,0,0"
                                    Click="BrowseRightAvatarButton_Click"
                                    Cursor="Hand"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock Text="名称:"
                                       FontSize="12"
                                       Foreground="White"
                                       Width="40"
                                       VerticalAlignment="Center"/>
                            <TextBox x:Name="RightAvatarNameTextBox"
                                     Width="150"
                                     Background="#333333"
                                     Foreground="White"
                                     BorderThickness="1"
                                     BorderBrush="White"
                                     Text="text"/>
                        </StackPanel>
                        
                        <!-- 右下角头像透明度 -->
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="头像透明度"
                                       FontSize="12"
                                       Foreground="White"
                                       Margin="0,0,0,5"/>
                            <StackPanel Orientation="Horizontal">
                                <Slider x:Name="RightAvatarOpacitySlider"
                                        Width="200"
                                        Minimum="0.1"
                                        Maximum="1.0"
                                        Value="1.0"
                                        TickFrequency="0.1"
                                        IsSnapToTickEnabled="True"/>
                                <TextBlock x:Name="RightAvatarOpacityText"
                                           Text="100%"
                                           FontSize="12"
                                           Foreground="White"
                                           Margin="10,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 右下角按钮区域 -->
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Right" 
                    VerticalAlignment="Bottom"
                    Margin="0,0,20,20">
            <Button x:Name="ApplyButton"
                    Content="应用"
                    Width="80"
                    Height="30"
                    Background="#666666"
                    Foreground="White"
                    BorderThickness="1"
                    BorderBrush="White"
                    Margin="0,0,10,0"
                    Click="ApplyButton_Click"
                    Cursor="Hand"/>
            <Button x:Name="SaveButton"
                    Content="保存设置"
                    Width="100"
                    Height="30"
                    Background="#666666"
                    Foreground="White"
                    BorderThickness="1"
                    BorderBrush="White"
                    Click="SaveButton_Click"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>