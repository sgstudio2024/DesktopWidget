<Window x:Class="DesktopWidget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="桌面小挂件"
        Width="300" Height="120"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize">
    <Grid>
        <Border x:Name="BackgroundBorder"
                Background="#AA222222" 
                CornerRadius="16" 
                Padding="20" 
                BorderThickness="1" 
                BorderBrush="#55FFFFFF">
            <Grid>
                <!-- 内容区域（不透明） -->
                <Grid x:Name="ContentGrid" Opacity="1">
                    <StackPanel>
                        <TextBlock x:Name="CountdownText"
                                   FontSize="14"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,0"/>
                        <!-- 这里可以添加你的挂件内容 -->
                    </StackPanel>
                    <!-- 左下头像 -->
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,0">
                    <TextBlock x:Name="LeftAvatarNameText"
                               Text="XX"
                               FontSize="12"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,2"/>
                    <Image x:Name="LeftAvatarImage"
                           Source="https://lxstu.sgstudio2025.xyz/1.png"
                           Width="40"
                           Height="40"
                           Stretch="Uniform"
                           HorizontalAlignment="Left"/>
                </StackPanel>
                <!-- 右下头像 -->
                <StackPanel Orientation="Vertical"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,0,0">
                    <TextBlock x:Name="RightAvatarNameText"
                               Text="XX"
                               FontSize="12"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,2"/>
                    <Image x:Name="RightAvatarImage"
                           Source="https://lxstu.sgstudio2025.xyz/2.png"
                           Width="40"
                           Height="40"
                           Stretch="Uniform"
                           HorizontalAlignment="Right"/>
                </StackPanel>
                    <!-- 中间爱心图片 -->
                <Image x:Name="CenterHeartImage"
                       Source="https://lxstu.sgstudio2025.xyz/3.png"
                       Width="48"
                       Height="48"
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Bottom"
                       Margin="0,0,0,8"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>